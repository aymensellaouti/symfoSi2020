{% extends 'base.html.twig' %}

{% block title %}Hobbie index{% endblock %}

{% block body %}
    <h1>Hobbie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Designation</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for hobbie in hobbies %}
            <tr>
                <td>{{ hobbie.id }}</td>
                <td>{{ hobbie.designation }}</td>
                <td>{{ hobbie.createdAt ? hobbie.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ hobbie.updatedAt ? hobbie.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('hobbie_show', {'id': hobbie.id}) }}">show</a>
                    <a href="{{ path('hobbie_edit', {'id': hobbie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('hobbie_new') }}">Create new</a>
{% endblock %}
